  .transport-item:last-child {
    margin-bottom: 0;
  }

  .header {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 12px;
  }

  .icon {
    background: #f5f5f5;
    width: 32px; /* Smaller icon */
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    font-size: 1.1rem;
