    border: none;
    border-radius: 4px;
    padding: 2px 6px;
    font-size: 0.75rem;
    color: #666;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 3px;
    transition: background 0.2s;
  }

  .copy-btn:hover {
    background: #e0e0e0;
  }
  
  .map-buttons {
    display: flex;
    gap: 10px;
    justify-content: center;
    padding: 0 20px;
    margin-bottom: 50px;
  }
  
  .map-btn {
    flex: 1;
    max-width: 120px;
    padding: 10px 0;
    background: #fff;
    border: 1px solid #ddd;
    border-radius: 6px;
    text-decoration: none;
    color: #666;
    font-size: 0.85rem;
    transition: all 0.2s;
    display: inline-flex;
    justify-content: center;
    align-items: center;
  }
  
  .map-btn:hover {
