<section class="transport">
  <div class="transport-item">
    <h3>Subway</h3>
    <p>Line 2, Station Name, Exit 3 (5 min walk)</p>
  </div>
  <div class="transport-item">
    <h3>Bus</h3>
    <p>Bus Stop: Station Name</p>
    <p class="detail">Blue: 123, 456 / Green: 7890</p>
  </div>
  <div class="transport-item">
    <h3>Car</h3>
    <p>Navigation: "W Square Convention"</p>
    <p class="detail">Parking: 2 hours free (B1-B3)</p>
  </div>
</section>

<style>
  .transport {
    padding: 0 20px 60px;
    text-align: left;
  }
  .transport-item {
    margin-bottom: 25px;
    padding-bottom: 25px;
    border-bottom: 1px solid #f0f0f0;
  }
  .transport-item:last-child {
    border-bottom: none;
    margin-bottom: 0;
    padding-bottom: 0;
  }
  h3 {
    color: #d4a373;
    font-size: 0.95rem;
    margin-bottom: 8px;
    font-weight: bold;
  }
  p {
    color: #555;
    font-size: 0.9rem;
    line-height: 1.5;
  }
  .detail {
    color: #888;
    font-size: 0.85rem;
    margin-top: 4px;
  }
</style>
