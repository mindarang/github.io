---
import { Image } from 'astro:assets';
import mainImage from '../assets/main.jpeg';
---
<section class="intro">
  <div class="main-image">
    <Image
      src={mainImage}
      alt="Main Wedding Photo"
      class="main-photo"
      width={800}
      format="webp"
      quality={80}
      loading="eager"
    />
  </div>
  <div class="intro-content">
    <div class="names-container">
      <span class="groom-name">김민섭</span>
      <div class="heart-divider">
        <svg width="30" height="30" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z" fill="#9B785C"/>
        </svg>
      </div>
      <span class="bride-name">이다강</span>
    </div>
    <div class="wedding-details">
      <p class="date">2026. 03. 08 SUN</p>
      <p class="time">오전 11시</p>
      <p class="venue">다르미앙 인천 송도</p>
    </div>
  </div>
</section>

<style>
  .intro {
    position: relative;
    width: 100%;
    background: #fff;
  }
  
  .main-image {
    position: relative;
    width: 100%;
  }
  
  .main-image img {
    width: 100%;
    height: auto;
    display: block;
  }
  
  .intro-content {
    padding: var(--section-padding-y) 0 calc(var(--section-padding-y) * 0.5);
    text-align: center;
  }
  
  .names-container {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 15px;
    margin-bottom: 25px;
  }
  
  .groom-name,
  .bride-name {
    font-size: 1.6rem;
    font-weight: 700;
    letter-spacing: 4px;
  }
  
  .heart-divider {
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .wedding-details {
  }
  
  .wedding-details p {
    margin: 5px 0;
  }
  
  .date {
    font-size: 1.1rem;
    font-weight: 400;
  }
  
  .time {
    font-size: 1.1rem;
    font-weight: 400;
  }
  
  .venue {
    font-size: 1.1rem;
    font-weight: 400;
  }
</style>
