<style>
  .contact {
    padding: 60px 0;
    background-color: #fcfcfc;
  }
  
  .title {
    color: #9B785C;
    font-size: 0.85rem;
    letter-spacing: 3px;
    margin-bottom: 40px;
    font-family: 'Crimson Text', serif;
    text-align: center;
  }
  
  .contact-list {
    padding: 0 20px;
  }
  
  .contact-section {
    margin-bottom: 30px;
  }
  
  .section-title {
    font-family: 'Nanum Myeongjo', serif;
    font-size: 1.1rem;
    font-weight: 600;
    color: #9B785C;
    margin-bottom: 20px;
    text-align: center;
  }
  
  .contact-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 15px 20px;
    background: #fff;
    border-radius: 8px;
    margin-bottom: 10px;
  }
  
  .person-info {
    display: flex;
    align-items: center;
    gap: 15px;
  }
  
  .label {
    font-size: 0.85rem;
    color: #999;
    min-width: 40px;
  }
  
  .name {
    font-family: 'Nanum Myeongjo', serif;
    font-size: 1rem;
    font-weight: 500;
    color: #333;
  }
  
  .actions {
    display: flex;
    gap: 10px;
  }
  
  .btn {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    background: #f5f5f5;
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    color: #666;
    transition: all 0.2s;
  }
  
  .btn:hover {
    background: #9B785C;
    color: #fff;
  }
  
  .divider {
    height: 1px;
    background: #e0e0e0;
    margin: 30px 0;
  }
</style>
