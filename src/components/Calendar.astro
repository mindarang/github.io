<style>
  .title {
    color: #d4a373;
    font-size: 1rem;
    letter-spacing: 2px;
    margin-bottom: 30px;
  }
  .calendar-wrapper {
    background: #f9f9f9;
    padding: 30px;
    border-radius: 10px;
    display: inline-block;
  }
  .month {
    font-size: 1.5rem;
    font-weight: bold;
    margin-bottom: 20px;
  }
  .calendar {
    width: 100%;
    border-collapse: collapse;
    font-size: 0.9rem;
  }
  th, td {
    width: 30px;
    height: 30px;
    text-align: center;
    vertical-align: middle;
  }
  th {
    color: #999;
    font-weight: normal;
  }
  .sun {
    color: #e57373;
  }
  .d-day {
    margin-top: 30px;
    font-size: 1rem;
  }
  .accent {
    color: #d4a373;
    font-weight: bold;
  }
</style>
