---
import 'photoswipe/style.css';

const images = [
  { src: 'https://placehold.co/600x400/F5F0EB/9B785C', width: 600, height: 400, alt: 'Gallery 1' },
  { src: 'https://placehold.co/600x400/F5F0EB/9B785C', width: 600, height: 400, alt: 'Gallery 2' },
  { src: 'https://placehold.co/600x400/F5F0EB/9B785C', width: 600, height: 400, alt: 'Gallery 3' },
  { src: 'https://placehold.co/600x400/F5F0EB/9B785C', width: 600, height: 400, alt: 'Gallery 4' },
  { src: 'https://placehold.co/600x400/F5F0EB/9B785C', width: 600, height: 400, alt: 'Gallery 5' },
  { src: 'https://placehold.co/600x400/F5F0EB/9B785C', width: 600, height: 400, alt: 'Gallery 6' },
];
---

<section class="gallery_container">
  <div class="title">GALLERY</div>
  <div class="gallery_grid" id="gallery-grid">
    {
      images.map((image) => (
        <a
          href={image.src}
          data-pswp-width={image.width}
          data-pswp-height={image.height}
          class="gallery_item"
          target="_blank"
        >
          <img src={image.src} alt={image.alt} />
        </a>
      ))
    }
  </div>
</section>

<script>
  import PhotoSwipeLightbox from "photoswipe/lightbox";

  const lightbox = new PhotoSwipeLightbox({
    gallery: "#gallery-grid",
    children: "a",
    pswpModule: () => import("photoswipe"),
  });
  lightbox.init();
</script>

<style>
  .gallery_container {
    padding: 60px 0;
    background-color: #fff;
  }
  
  .title {
    color: #9B785C;
    font-size: 0.85rem;
    letter-spacing: 3px;
    margin-bottom: 40px;
    font-family: 'Crimson Text', serif;
    text-align: center;
  }
  
  .gallery_grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    grid-gap: 4px;
    width: 100%;
    padding: 0;
  }
  
  .gallery_item {
    overflow: hidden;
    display: block;
  }
  
  .gallery_item img {
    width: 100%;
    height: auto;
    object-fit: cover;
    display: block;
    aspect-ratio: 1 / 1;
    transition: transform 0.3s ease;
  }
  
  .gallery_item:hover img {
    transform: scale(1.05);
  }
</style>
